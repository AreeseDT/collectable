{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "target": "es6",
    "sourceMap": true,
    "preserveConstEnums": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "outDir": "./.build",
    "lib": ["dom", "es5", "es6", "es2015"],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./packages/*/src/**/*.ts",
    "./packages/*/tests/**/*.ts"
  ]
}